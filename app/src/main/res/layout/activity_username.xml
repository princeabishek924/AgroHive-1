<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:text="Set Your Username"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:text="Choose a unique username to identify yourself."
        android:textColor="@color/dark_gray"
        android:textSize="14sp" />

    <!-- Username Input -->
    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_bg"
        android:drawableStart="@drawable/user"
        android:drawablePadding="12dp"
        android:hint="Username (e.g., john_doe)"
        android:inputType="text"
        android:maxLength="20"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_gray"
        android:textSize="16sp" />

    <!-- Availability Status -->
    <TextView
        android:id="@+id/usernameAvailabilityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text=""
        android:textColor="@color/dark_gray"
        android:textSize="12sp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveUsernameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_bg"
        android:text="Save Username"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:enabled="false" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>